const express = require("express");
const axios = require("axios");

const app = express();
app.use(express.json());

const WITETEC_BASE_URL = "https://api.witetec.net";
const API_KEY = process.env.WITETEC_API_KEY;

// Teste
app.get("/", (req, res) => {
  res.send("API Apex rodando ðŸš€");
});

// Criar PIX
app.post("/criar-pix", async (req, res) => {
  try {
    const { amount, name, document } = req.body;

    const response = await axios.post(
      `${WITETEC_BASE_URL}/transactions`,
      {
        amount: amount, // em centavos (ex: 1000 = R$10)
        method: "PIX",
        customer: {
          name: name,
          documentType: "CPF",
          document: document
        },
        items: [
          {
            title: "Pagamento Apex",
            amount: amount,
            quantity: 1,
            tangible: false
          }
        ]
      },
      {
        headers: {
          "x-api-key": API_KEY,
          "Content-Type": "application/json"
        }
      }
    );

    res.json(response.data);

  } catch (error) {
    console.error("Erro:", error.response?.data || error.message);
    res.status(500).json({ erro: "Erro ao criar PIX" });
  }
});

// Webhook WiteTec
app.post("/witetec/webhook", (req, res) => {
  console.log("Webhook recebido:", req.body);

  if (req.body.eventType === "TRANSACTION_PAID") {
    console.log("Pagamento confirmado!");
  }

  res.sendStatus(200);
});

const PORT = process.env.PORT || 3000;
app.listen(PORT, () => {
  console.log("Servidor rodando na porta " + PORT);
});